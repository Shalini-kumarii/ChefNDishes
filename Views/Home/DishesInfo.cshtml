@model List<Chef>
@using Chef_N_Dishes.Models;
@using System.Collections.Generic;



<!DOCTYPE html>
<html>

<head>
    <meta charset='utf-8'>
    <title>Dishes!</title>
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
    <div class="container">
        <div class="box">
            <div class="col-sm-9 " style="background-color:lightgrey;">
            <h1> Check out some recent dishes !</h1>
    <div class="nav navbar-nav navbar-left"><p>
    <a href="/chef">Chefs |</a> Dish</p>
    </div>
    <div class="nav navbar-nav navbar-right">
    <a href="/newDish">Add a dish</a></div>
    <table class="table table-striped">
        <thead>
      <tr>
        <th>Dish Name</th>
        <th>Chef Name</th>
        <th>Tastiness</th>
        <th>Calories</th>
      </tr>
      </thead>
    <tbody>
    
    @{
        foreach(var x in Model){
            foreach(var y in x.DishList)
            
            {
                <tr>
             <th>@y.DishName</th>
              <th>  @x.FirstName @x.LastName</th>
               <th> @y.Tastiness</th>
               <th>@y.Calories</th>
                </tr>
                
            }
        }
    }
    </tbody>
    </table>
    <a href="/newDish">Add a dish</a>
    <a href="/newChef">Add a Chef</a>
    
            </div>
        </div>
    </div>
</body>

</html>